<%= stylesheet_link_tag '/stylesheets/mailers/build_mailer' %> 

<div class="email-container">
  <div class="email-logo-container">
    <%= image_tag(attachments['logo.png'].url, class:"email-logo") %>
    &nbsp;
    <div class="email-logo-text">Cat Linker</div>
  </div>
  <div class="email-body-container">
    <p><%= t('mailer.hi_there') %> <b><%= @resource.email %></b>!</p>

    <p><%= t('mailer.unlock.account_locked') %>.</p>

    <p><%= t('mailer.unlock.unlock_account_with_link_below') %>:</p>

    <p><%= link_to t('mailer.unlock.unlock_my_account'), unlock_url(@resource, unlock_token: @token), class:"email-button" %></p>
  </div>
</div>
