<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="turbolinks-visit-control" content="reload">

    <%= favicon_link_tag asset_path('favicon.png') %>
    <title><%= meta_title %></title>
    <meta name="description" content="<%= meta_description %>">

    <!-- Facebook Open Graph data -->
    <meta property="og:title" content="<%= meta_title %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:image" content="<%= meta_facebook_image %>" />
    <meta property="og:description" content="<%= meta_description %>" />
    <meta property="og:site_name" content="<%= meta_site_name %>" />
    <meta property="og:image:alt" content="<%= meta_image_alt %>">
    
    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= meta_title %>">
    <meta name="twitter:description" content="<%= meta_description %>">
    <meta name="twitter:image:src" content="<%= meta_twitter_image %>">
    <meta name="twitter:image:alt" content="<%= meta_image_alt %>">

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp" rel="stylesheet">
    <script src="https://kit.fontawesome.com/25b3ebb045.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="navbar-fixed">
        <nav>
          <div class="nav-wrapper">
            <%= link_to root_path, class:"logo" do %>
              <%= image_tag("logo_2.svg", :alt => "logo") %>
              Cat Linker
            <% end %>

            <div class="right show-on-medium-and-down">
              <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            </div>

            <ul class="right hide-on-med-and-down">
              <li><%= link_to "Breeds", breeds_path %></li>
              <li><%= link_to "Catteries", catteries_path %></li>
              <li><%= link_to "Kittens", cats_path %></li>
              <% if !user_signed_in? %>
                <li><%= link_to "Login", new_user_session_path %></li>
              <% else %>
                <li>
                  <a class="nav-dropdown-trigger" data-target='dropdown1'>
                    <span>Account</span>
                    <i class="material-icons">arrow_drop_down</i>
                  </a>
                </li>
                <ul id='dropdown1' class='dropdown-content'>
                  <% if user_signed_in? && current_user.is_cattery %>
                    <li><%= link_to "My Cattery", my_cattery_cattery_path(@user) %></li>
                  <% end %>
                  <li><%= link_to "Profile", edit_user_registration_path %></li>
                  <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                </ul>
              <% end %>
            </ul>
          </div>
        </nav>
      </div>

      <div class="row">
        <ul class="sidenav" id="mobile-demo">
        <%= link_to root_path, class:"logo" do %>
                <%= image_tag("logo_2.svg", :alt => "logo") %>
                <div>Cat Linker</div>
          <% end %>
          <li><%= link_to "Breeds", breeds_path %></li>
          <li><%= link_to "Catteries", catteries_path %></li>
          <li><%= link_to "Kittens", cats_path %></li>
          <% if !user_signed_in? %>
            <li><%= link_to "Login", new_user_session_path %></li>
          <% else %>
            <li><div class="divider"></div></li>
            <li><a class="subheader">Account</a></li>
            <% if user_signed_in? && current_user.is_cattery %>
              <li><%= link_to "My Cattery", my_cattery_cattery_path(@user), class:"subitem" %></li>
            <% end %>
            <li><%= link_to "Profile", edit_user_registration_path, class:"subitem" %></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete, class:"subitem" %></li>
          <% end %>
        </ul>
      </div>
    </header>
          
    <% if notice %>
    <script>M.toast({html: '<%= notice %>', classes: 'alert alert-success'})</script>
    <% end %>
    <% if alert %>
      <script>M.toast({html: '<%= alert %>', classes: 'alert alert-danger'})</script>
    <% end %>

    <main>
      <%= yield %>
    </main>
    
    <% if current_user && current_user.is_admin? %>
      <div class="fixed-action-btn">
        <a class="btn-floating btn-large">
          <i class="large material-icons">group</i>
        </a>
      </div>
    <% end %>

    <footer class="page-footer">
      <div class="container">
        <div class="row">
          <div class="col l6 s12">
            <h5 class="footer-title white-text">Support</h5>
            <ul>
              <li><a class="grey-text text-lighten-3" href="#!">Help</a></li>
              <li><%= link_to "Contact", contact_home_path(@support), class:"grey-text text-lighten-3" %></li>
            </ul>
          </div>
          <div class="col l6 s12">
            <h5 class="footer-title white-text">Information</h5>
            <ul>
              <li><a class="grey-text text-lighten-3" href="#!">Terms of service</a></li>
              <li><a class="grey-text text-lighten-3" href="#!">Privacy policy</a></li>
              <li><a target="_blank" href="https://icons8.com/icons/set/cat--v3"><a target="_blank" class="grey-text text-lighten-3" href="https://icons8.com">Icons8</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="footer-copyright">
        <div class="container">
        Â© <%= Time.current.year %> Cat Linker
        </div>
      </div>
    </footer>
  </body>
</html>

