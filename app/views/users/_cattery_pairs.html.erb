<% @pairs.each do |pair| %>
  <div class="col s10 offset-s1 m6 l3">
    <div class="card">
      <div class="card-tabs">
        <ul class="tabs tabs-fixed-width">
          <li class="tab"><a class="active" href="#<%= pair.id %><%= pair.male.id %>"><%= pair.male.name %></a></li>
          <li class="tab"><a  href="#<%= pair.id %><%= pair.female.id %>"><%= pair.female.name %></a></li>
        </ul>
      </div>
      <div class="card-image" id="<%= pair.id %><%= pair.male.id %>" >
        <%= image_tag(pair.male.thumbnail, alt:"#{cat_breed(pair.male).name} father") if pair.male.card_picture.attached? %>
      </div>
      <div class="card-image" id="<%= pair.id %><%= pair.female.id %>" >
        <%= image_tag(pair.female.thumbnail, alt:"#{cat_breed(pair.female).name} mother") if pair.female.card_picture.attached? %>
      </div>
      <div class="card-content">
        <% if user_signed_in? && current_user == @user %>
          <%= link_to edit_pair_path(pair, form: "pair"), class:"btn-floating halfway-fab waves-effect waves-light btn-large" do %>
            <i class="material-icons">edit</i>
          <% end %>
        <% end %>
        <div class="info-block">
          <div class="row">
            <div class="col s4">
              <span class="info-title"><%= t('breed', count:1) %>:</span>
            </div>
            <div class="col s8">
              <span class="info-text"><%= t("breeds.#{cat_breed(pair.male).breed_code}.name") %></span>
            </div>
          </div>
        </div>
        <div class="info-block">
          <div class="row">
            <div class="col s4">
              <span class="info-title"><%= t('cat_info.litters') %>:</span>
            </div>
            <div class="col s8">
              <span class="info-text"><%= pair_litters_count(pair, @user) %></span>
            </div>
          </div>
        </div>
        <div class="info-block">
          <div class="row">
            <div class="col s4">
              <span class="info-title"><%= t('header.kittens') %>:</span>
            </div>
            <div class="col s8">
              <span class="info-text"><%= pair_kittens_count(pair, @user) %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>