<div class="form">

  <div class="row">
    <h2 class="form-title">Contact</h2>
  </div>

  <div class="row">
    <div class="col s12 m6 l7">
      <%= form_with(model: @message, url: messages_path) do |f| %>
        <div class="row">
          <br>
        </div>

        <div class="row">
          <div class="col s12">
            <div class="input-field">
              <%= f.label :email do %>
                Your email *
              <% end %>
              <%= f.text_field :email %>
              <%= render 'shared/error_messages', object: @message, field: :email %>
            </div>
          </div>
        </div>


        <div class="row">
          <div class="col s12">
            <div class="input-field">
              <%= f.label :subject do %>
                Subject *
              <% end %>
              <%= f.text_field :subject %>
              <%= render 'shared/error_messages', object: @message, field: :subject %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col s12">
            <div class="input-field">
              <%= f.label :description do %>
                Message *
              <% end %>
              <%= f.text_area :description, class:'materialize-textarea' %>
              <%= render 'shared/error_messages', object: @message, field: :description %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="actions">
            <div class="col">
              <%= f.button class:"btn-large waves-effect waves-light", type:"submit", name:"cat_id", value: cat.id do %>
                Send
                <i class="material-icons right">send</i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col s12 m6 l5">
      <div class="row">
        <div class="contact-info-block">
          <div class="col s4 m4 info-title">
            Email:
          </div>
          <div class="col s8 m8 info-text">
            <%= mail_to cattery(cat).email, class:"info-link" do %>
              <%= cattery(cat).email %>
            <% end %>
          </div>
        </div>
        <% if cattery(cat).phone_number.present? %>
          <div class="contact-info-block">
            <div class="col s4 m4 info-title">
              Phone:
            </div>
            <div class="col s8 m8 info-text">
              <%= link_to "tel:#{cattery(cat).phone_number}", class:"info-link" do %>
                <%= cattery(cat).phone_number %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>