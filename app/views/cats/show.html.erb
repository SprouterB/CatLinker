<!-- Page specific meta data -->
<% content_for :meta_title, "#{DEFAULT_META["meta_title"]} | #{Breed.find(@cat.breed_id).name} kitten | #{cat_location(@cat)}" %>
<% content_for :meta_description, t('meta.show_kitten', cat_breed: t("breeds.#{Breed.find(@cat.breed_id).breed_code.upcase}.name"), cat_gender: cat_gender(@cat), cattery: cattery(@cat).cattery_name, cat_birth_date: format_birth_date(@cat), cat_location: cat_location(@cat)) %>
<% content_for :meta_facebook_image, "#{url_for(@cat.facebook_thumbnail)}" %>
<% content_for :meta_twitter_image, "#{url_for(@cat.twitter_thumbnail)}" %>
<% content_for :meta_image_alt, "Kitten card picture" %>

<div id="kitten-view" class="container">
  <div class="row">
    <div class="col s12">
        <h1><%= t("breeds.#{cat_breed(@cat).breed_code}.name") %><h1>
        <% if @cat.name.present? %>
          <h1 class="cat-name"><%= @cat.name %><h1>
        <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m6 picture-main-container"> 
      <%= image_tag(@cat.card_picture, :alt => "main picture", class:"picture-main z-depth-2") %>
    </div>
    <div class="col s12 m6">
      <div class="info-main">
        <div class="row">
          <div class="col s6 m5 info-title">
            <%= t('cat_info.cattery') %>:
          </div>
          <div class="col s6 m7 info-text">
            <%= link_to cattery_path(@user), class:"info-link" do %>
              <%= cattery(@cat).cattery_name %>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col s6 m5 info-title">
            <%= t('cat_info.location') %>:
          </div>
          <div class="col s6 m7 info-text">
            <%= cat_location(@cat) %>
          </div>
        </div>
        <div class="row">
          <div class="col s6 m5 info-title">
            <%= t('cat_info.gender') %>:
          </div>
          <div class="col s6 m7 info-text">
            <%= cat_gender(@cat).capitalize %>
          </div>
        </div>
        <div class="row">
          <div class="col s6 m5 info-title">
            <%= t('cat_info.birth_date') %>:
          </div>
          <div class="col s6 m7 info-text">
            <%= format_birth_date(@cat) %>
          </div>
        </div>
        <div class="row">
          <div class="col s6 m5 info-title">
            <%= t('cat_info.color') %>:
          </div>
          <div class="col s6 m7 info-text">
            <%= @cat.color.capitalize %>
          </div>
        </div>
        <div class="row">
          <div class="col s6 m5 info-title">
            <%= t('cat_info.vaccinated') %>:
          </div>
          <div class="col s6 m7 info-text">
            <% if @cat.is_vaccinated %>
              <i class="material-icons check">check</i>
            <% else %>
              <i class="material-icons close">close</i>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col s6 m5 info-title">
            <%= t('cat_info.castrated') %>:
          </div>
          <div class="col s6 m7 info-text">
            <% if @cat.is_castrated %>
              <i class="material-icons check">check</i>
            <% else %>
              <i class="material-icons close">close</i>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col s6 m5 info-title">
            <%= t('cat_info.available') %>:
          </div>
          <div class="col s6 m7 info-text">
            <% if @cat.is_available %>
              <i class="material-icons check">check</i>
            <% else %>
              <i class="material-icons close">close</i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <% if @cat.pictures.any? %>
        <div class="preloader-wrapper">
          <div class="spinner-layer spinner-teal-only">
            <div class="circle-clipper left">
              <div class="circle"></div>
            </div><div class="gap-patch">
              <div class="circle"></div>
            </div><div class="circle-clipper right">
              <div class="circle"></div>
            </div>
          </div>
        </div>
        <div class="pictures-other-container grid">
          <div class="grid-col grid-col--1"></div>
          <div class="grid-col grid-col--2"></div>
          <div class="grid-col grid-col--3"></div>
          <div class="grid-col grid-col--4"></div>
          <% (0...@cat.pictures.count).each do |picture| %>
            <div class="image-placeholder grid-item">
              <%= image_tag(@cat.other_pictures(picture), class:"thumbnail materialboxed") %> 
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="section parents">
    <h1><%= t('cat_info.parents') %></h1>
    <div class="row">
      <div class="pictures-parents-container">
        <div class="col s12 m5 offset-m1">
          <div class="picture-parent-container"> 
            <%= image_tag(cat_father(@cat).square, :alt => "father picture") %>
          </div>
          <div class="parent-info">
            <h3><%= cat_father(@cat).name %></h3>
            <% if cat_father(@cat).origin.present? %>
              <h4><span><%= t('cat_info.origin') %>:</span>&nbsp;<%= cat_father(@cat).origin %><h4>
            <% end %>
          </div>
        </div>
        <div class="col s12 m5">
          <div class="picture-parent-container"> 
            <%= image_tag(cat_mother(@cat).square, :alt => "mother picture") %>
          </div>
          <div class="parent-info">
            <h3><%= cat_mother(@cat).name %></h3>
            <% if cat_mother(@cat).origin.present? %>
              <h4><span><%= t('cat_info.origin') %>:</span>&nbsp;<%= cat_mother(@cat).origin %><h4>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% if other_kittens_from_same_litter(@cat).any? %>
    <div class="section other-kittens">
      <div class="row">
        <h1><%= t('cat_info.siblings') %></h1>
      </div>
      <div class="row">
        <% other_kittens_from_same_litter(@cat).each do |cat| %>
          <div class="col s10 offset-s1 m6 l4">
            <%= link_to cat_path(cat) do %>
              <div class="card">
                <div class="card-image">
                  <%= image_tag(cat.thumbnail, :alt => "card picture") %>
                  <% if !cat.name.blank? %>
                    <span class="card-title"><%= cat.name %></span>
                  <% end %>
                </div>
                <div class="card-content">
                  <div class="info-block">
                    <div class="row">
                      <div class="col s4">
                        <span class="info-title"><%= t('breed', count: 1) %>:</span>
                      </div>
                      <div class="col s8">
                        <span class="info-text"><%= t("breeds.#{cat_breed(cat).breed_code}.name") %></span>
                      </div>
                    </div>
                  </div>
                  <div class="info-block">
                    <div class="row">
                      <div class="col s4">
                        <span class="info-title"><%= t('cat_info.gender') %>:</span>
                      </div>
                      <div class="col s8">
                        <span class="info-text"><%= cat_gender(cat).capitalize %></span>
                      </div>
                    </div>
                  </div>
                  <div class="info-block">
                    <div class="row">
                      <div class="col s8 offset-s4">
                        <div class="info-available">
                          <% if cat.is_available %>
                            <i class="material-icons check">check</i>
                            <span class="available-text"><%= t('cat_info.available') %></span>
                          <% else %>
                            <i class="material-icons close">close</i>
                            <span class="unavailable-text"><%= t('cat_info.unavailable') %></span>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="section social-media">
    <div class="row">
      <h1><%= t('social.share_this_kitten') %></h1>
    </div>
    <%= render 'shared/social_media_share_buttons' %>
  </div>
  <div id="contact" class="section contact">
    <%= render 'shared/contact_form', user: @user, cat: @cat %>
  </div>
</div>