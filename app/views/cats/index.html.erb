<!-- Page specific meta data -->
<% content_for :meta_title, "#{DEFAULT_META["meta_title"]} | Kittens" %>

<div class="kittens-index">
  <h1><%= t('header.kittens') %></h1>

  <div class="search-bar">
    <div id="search" class="container">
      <%= render 'shared/search', :locals => {:controller => 'cats', :action => 'index'} %>
    </div>
  </div>

  <div class="container">
    <div class="preloader-wrapper" id="preloader">
      <div class="spinner-layer spinner-teal-only">
        <div class="circle-clipper left">
          <div class="circle"></div>
        </div><div class="gap-patch">
          <div class="circle"></div>
        </div><div class="circle-clipper right">
          <div class="circle"></div>
        </div>
      </div>
    </div>
    <% if @kittens.present? %>
      <div class="row">
        <div id="kittens">
            <%= render partial: 'page_items' %>
          </div>
        </div>
    <% else %>
      <div id="kittens" class="row">
        <div class="col s12 center-align">
          <span class="empty-message"><%= t('index.no_kittens_found') %>!</span>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="div_next_link">
  <%= render partial: 'shared/next_link' %>
</div>