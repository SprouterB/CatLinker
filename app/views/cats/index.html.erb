<div class="kittens-index">
  <h1>Kittens</h1>

  <div class="search-bar">
    <div id="search" class="container">
      <%= render 'search', :locals => {:controller => 'cats', :action => 'index'} %>
    </div>
  </div>

  <div class="container">
    <% if @kittens.present? %>
      <div id="kittens" class="row">
        <%= render partial: 'page_items' %>
      </div>
    <% else %>
      <div id="kittens" class="row">
        <div class="col s12 center-align">
          <span class="empty-message">No kittens found!</span>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="loader">
</div>
<div id="div_next_link">
  <%= render partial: 'next_link' %>
</div>